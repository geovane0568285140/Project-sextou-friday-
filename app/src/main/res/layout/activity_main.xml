<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text_drinking_day"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:gravity="center"
        android:textSize="22sp"
        android:background="@color/purple"
        android:textColor="@color/white"
        android:text="@string/drinking_day"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        />

    <View
        android:id="@+id/view_top_image_drink"
        android:layout_width="250dp"
        android:layout_height="4dp"
        android:background="@color/purple"
        android:layout_above="@+id/image_drink"
        android:layout_centerHorizontal="true"
        />

    <ImageView
        android:id="@+id/image_drink"
        android:layout_width="350dp"
        android:layout_height="400dp"
        android:src="@mipmap/new_drink"
        android:layout_centerInParent="true"
        tools:ignore="UseAppTint" />

    <View
        android:id="@+id/view_bottom_image_drink"
        android:layout_width="250dp"
        android:layout_height="4dp"
        android:background="@color/purple"
        android:layout_below="@+id/image_drink"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/button_new_drink"
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:text="@string/new_drink"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="38dp"
        android:textSize="24sp"
        android:backgroundTint="@color/purple"/>

</RelativeLayout>